/* users/show/show.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: black;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: black;
}
.user-box {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 0 25rpx;
}

.bookingcard {
  position:relative;
  display:flex;
  justify-content:space-between;
  align-items:center;
  flex-direction: column;
  width:95vw;
  height: 200rpx;
  background-size:cover;
  background-position:center;
  box-shadow:0px 4px 8px #c1c1c1;
  padding:0;
  margin: 25rpx auto;
}

.bookingcard-title {
  height: 70%;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-size: cover;
  background-position: center;
}

.title-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width: 80%;
  margin-left: 25rpx;
}

.title-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
}

.bookingcard-title .name {
  text-transform: uppercase;
  font-size: 25px;
  font-weight: light;
  letter-spacing: 3px;
}

.bookingcard-title .location {
  font-style: italic;
  font-size: 12px;
  padding-bottom: 10rpx;
}


.title-right .status-box {
  font-size: 25px;
}


.bookingcard-right {
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0;
  padding: 0;
}



.bookingcard-footer {
  height: 30%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bookingcard-footer .dates {
  font-style: italic;
  font-size: 15px;
  margin-left: 25rpx;
}

.bookingcard-footer .review {
  width: 50px;
  height: 85%;
  padding: 0;
  margin: 0;
  margin-right: 25rpx;
}










.pupcard {
  position:relative;
  display:flex;
  justify-content:space-between;
  align-items:center;
  flex-direction:column;
  margin: 10px;
  background-size:cover;
  background-position:center;
  box-shadow:0px 4px 8px #c1c1c1;
  padding:0;
}

.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
  color: black;
}

.card-description {
  position: absolute;
  top: 25px;
  left: 10px;
  font-size:12px;
  padding:5px 0;
  color:rgb(100,100,100);

}

.card-image {
  width:100%;
  height:100px;
  background-size: cover !important;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  margin:0;
}

.details {
  position: absolute;
  color: white;
  font-size: 12px;
  top: 12px;
  right: 10px;
}

.checkbox {
  float:right;
}

.login-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

button {
  width: 95vw;
  margin: 25rpx auto;
  font-weight: bold;
}
.pupdetails {
  display: flex;
  justify-content: space-between;
  font-size: 15px;
}
.booking {
  width: 90vw;
  border-bottom: 1px solid rgb(200,200,200);
}
.booking:last-child {
  border-bottom: 0;
}

