/* users/show/show.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: black;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: black;
}
.user-box {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 0 25rpx;
}
.bookingcard {
  position:relative;
  display:flex;
  justify-content:space-between;
  align-items:center;
  flex-direction:column;
  width:95vw;
  background-size:cover;
  background-position:center;
  margin:10px;
  box-shadow:0px 4px 8px #c1c1c1;
  padding:0;
