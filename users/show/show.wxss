/* users/show/show.wxss */
.swiper-tab {
	width: 100%;
	border-bottom: 1rpx solid black;
	text-align: center;
	line-height: 80rpx;
  display:flex;
  justify-content:space-around;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
	width: 33.33%;
	color: rgb(150,150,150);
}

.on { 
  color: black;
	border-bottom: 2rpx solid black;
}
 
.swiper-box { 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}

.swiper-box view {
	text-align: center;
}

.card {
  position:relative;
  display:flex;
  justify-content:space-between;
  align-items:center;
  flex-direction:column;
  height:200px;
  width:95vw;
  background-size:cover;
  background-position:center;
  margin:10px;
  box-shadow:0px 4px 8px #c1c1c1;
  padding:0;
}

.card-footer {
  position: relative
}

.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
  color: white;
}

.card-description {
  position: absolute;
  top: 25px;
  left: 10px;
  font-size:12px;
  padding:5px 0;
  color:rgb(200,200,200);

}

.card-image {
  width:100%;
  height:150px;
  background-size: cover !important;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  margin:0;
}

.card-footer {
  display:flex;
  align-items:center;
  justify-content:space-between;
  height:50px;
  width:100%;
}

.pup-rating {
  position: absolute;
  bottom: 10px;
  left: 10px;
}

.details {
  position: absolute;
  bottom: 10px;
  right: 10px;
}