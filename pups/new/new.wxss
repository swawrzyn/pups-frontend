.container {
  width: 95vw;
  margin: 0 auto;
}

.input-fields-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-shadow:0px 4px 8px #c1c1c1;
  width: 100%;
  
}

.input-title text {
  margin-top: 25rpx;
  font-size: 72rpx;
}

.form-fields {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text-fields {
  margin: 25rpx;
}

.text-fields input {
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
  font-size: 48rpx;
  margin: 25rpx 0;
  padding: 10rpx 15rpx;
  background: #f5f5f5;
  border-radius: 3px;
  box-shadow: inset 0px 0px 15px 0px rgba(0,0,0,0.05);
}

.text-fields input .address {
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
  font-size: 20rpx;
  margin: 25rpx 0;
  padding: 10rpx 15rpx;
  background: #f5f5f5;
  border-radius: 3px;
  box-shadow: inset 0px 0px 15px 0px rgba(0,0,0,0.05);
}
.images-area {
  width: auto;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 45rpx;
}

.weui-uploader__input-box {
  width: 100rpx;
  height: 100rpx;
}

.weui-uploader__file {
  width: 100rpx;
  height: 100rpx;
}

.weui-uploader__file image {
  width: 100rpx;
  height: 100rpx;
}

.submit-button {
  clear: left;
  width: 75%;
  margin: 25rpx auto;
}
