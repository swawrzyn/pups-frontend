.filter-bar {
  height: 30px;
  width: 90vw;
  margin: 10px auto;
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  border: 0.5px solid #f1f1f1;
  box-shadow: 0px 4px 8px #c1c1c1;
  padding: 5px;
}

.filter-button {
  color: black;
  width: calc(90vw / 3);
  text-align: center;
  font-size: 16px;
}


.filter-button-hover {
  background: #f1f1f1;
}

.container {
  width: 95vw;
  height: 100%;
  margin: 0 auto;
  padding: 0;
  font-family: sans-serif;
}
.pup-card {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  height: 200px;
  width: 95vw;
  background-size: cover;
  background-position: center;
  margin: 10px;
  box-shadow: 0px 4px 8px #c1c1c1;
  padding: 0;
}

.card-image {
  width: 100%;
  height: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0;
}

.card-title {
  color: white;
  font-size: 25px;
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 3px;
}

.card-address {
  color: white;
  font-size: 16px;
  letter-spacing: 3px;
  font-weight: light;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  width: 100%;
}

.stars {
  padding: 0 10px;
}

.price {
  padding: 0 10px;
}

.card-link {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0;
}

.card-link-hover {
  opacity: 0.1;
}