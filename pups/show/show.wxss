.big-image {
  height: 250px;
  width: 100%;
  margin: 0;
  padding: 0;
}

.container {
  width: 90vw;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  padding: 0;
}

.pup-details {
  height: 250rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  margin: 0;
  margin-top: 20rpx;
  box-shadow: 0px 4px 8px #c1c1c1;
}

.pup-details .details {
 display: flex;
 flex-direction: column;
 justify-content: center;
 padding: 0 25rpx;
}

.pup-details .details .left {
  width: 67%;
  align-items: flex-start;
}

.pup-details .details .right {
  width: 33%;
  align-items: flex-end;
}

.pup-details .details.left .pup-name {
  font-size: 56rpx;
  font-weight: bold;
  margin: 0;
  padding: 0;
}

.pup-details .details.left .pup-address {
  font-size: 36rpx;
  font-style: italic;
}

.pup-details .details.right .price {
  font-size: 56rpx;
  font-weight: bold;
  margin: 0;
  padding: 0;
}

.pup-details .details.right .per-week {
  font-size: 24rpx;
  font-style: italic;
  text-align: right;
  margin: 0;
  padding: 0;
}





