.big-image {
  height: 250px;
  width: 100%;
  margin: 0;
  padding: 0;
  background-size: cover;
  background-position: center;
}

.container {
  width: 90vw;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  padding: 0;
  padding-bottom: 50rpx;
}

.pup-details {
  height: 550rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 0;
  margin: 0;
  margin-top: 20rpx;
  box-shadow: 0px 4px 8px #c1c1c1;
}

.pup-details .details {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pup-details .details .left {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex-direction: column;
  margin-left: 25rpx;
}

.pup-details .details .right {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  flex-direction: column;
  margin-right: 25rpx;
}

.pup-details .details .left .pup-name {
  font-size: 56rpx;
  font-weight: bold;
  margin: 0;
  padding: 0;
}

.pup-details .details .left .pup-address {
  font-size: 36rpx;
  font-style: italic;
}

.pup-details .details .right .price {
  font-size: 56rpx;
  font-weight: bold;
  margin: 0;
  padding: 0;
}

.pup-details .details .right .per-week {
  font-size: 24rpx;
  font-style: italic;
  text-align: right;
  margin: 0;
  padding: 0;
}

.description-container {
  height: 200rpx;
  width: 100%;
}

.description-container .description-content {
  padding: 25rpx;
  font-size: 14px;
  font-style: italic;
}

.booking-container {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 25rpx 0;
}

.booking-container .booking-button {
  width: 50%;
}

.review-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-top: 25rpx;
}

.review-title {
  font-size: 40rpx;
}

.review-box {
  position:relative;
  width: 90vw;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0px 4px 8px #c1c1c1;
}

.review-box .review-body {
  margin:10px;
  width: 100%;
  height: 125rpx;
  position:relative;
  align-items: center;
}


.review-body .review-content {
  margin-left: 25rpx;
}

.review-avatar{
  position:absolute;
  width: 30px;
  height:30px;
  border-radius:50px;
  margin-left:10px;
  top:10px;
}

.review-date{
   position:absolute;
   top:25px;
   right:200px;
   font-size:10px;
}

.review-name{
  position:absolute;
  right:205px;
  font-size:10px;
  font-weight:bold;
  top:10px
}
.review-content{
 top:25px;
 left:70px;
 font-size:8px;
}

.review-stars{
position:absolute;
right:50px;
top:8px;
font-size:15px
}

.review-footer {
  width: 100%;
  display: flex;
  margin-left:25px;
  align-items: center;
  height: 75rpx;
  font-size: 20px;
  bottom:0px;
}











