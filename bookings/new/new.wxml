<text>{{pup.name}}</text>
<view class="calendar">
  <view wx:if="{{date_error}}">
    <text>Date is not available. Please select again.</text>
  </view>
  
    <picker class="weui-btn" mode="date" value="{{start_date}}" start="{{today}}" end="2019-11-15" bindchange="bindStartDateChange">
    <view wx:if="{{!start_date}}">
      <button type="default">Select Start Date</button>
    </view>
    <view wx:elif="{{start_date}}">
      <button type="default">{{start_date_string}}</button>
    </view>
    </picker>
  
  <picker class="weui-btn" mode="date" value="{{start_date_string}}" start="{{start_date_string}}" end="2019-11-15" bindchange="bindEndDateChange">
    <view wx:if="{{!end_date}}">
      <button type="default">Select End Date</button>
    </view>
    <view wx:elif="{{start_date}}">
      <button type="default">{{end_date_string}}</button>
    </view>
    </picker>
</view>

  <view wx:if="{{total_cost}}" class="cost-box"><text class="cost">Total cost: ${{total_cost}}</text></view>
