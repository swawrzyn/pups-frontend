.container {
  width: 90vw;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  padding: 0;
  padding-bottom: 50rpx;
}

.cost-box {
  width: 100%;
  margin-top: 25rpx;
  box-shadow: 0px 4px 8px #c1c1c1;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.cost-box .cost {
  padding: 0 25rpx;
}