@import '../../template/calendar/index.wxss';

.container {
  width: 95vw;
  height: 100vh;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  padding: 0;
  padding-bottom: 15rpx;
}

.submit-button {
  width: 100%;
  margin: 25rpx 0;
}

.submit-button button {
  margin-top: 50rpx;
  width: 350rpx;
}

.submit-button .cost-box {
  width: 100%;
  height: 75rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cost-box .description {
  padding: 0 25rpx;
}

.cost-box .cost {
  padding: 0 25rpx;
}

.card {
  position:relative;
  display:flex;
  justify-content:space-between;
  align-items:center;
  flex-direction:column;
  height: 350rpx;
  width: 95vw;
  background-size:cover;
  background-position:center;
  margin:10px;
  box-shadow:0px 4px 8px #c1c1c1;
  padding:0;
}

.card-footer {
  position: relative
}

.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
  color: white;
}

.card-description {
  position: absolute;
  top: 25px;
  left: 10px;
  font-size:12px;
  padding:5px 0;
  color:rgb(200,200,200);

}

.card-image {
  width:100%;
  height:150px;
  background-size: cover !important;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  margin:0;
}

.card-footer {
  display:flex;
  align-items:center;
  justify-content:space-between;
  height:50px;
  width:100%;
}

.calendar-box {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  box-shadow: 0px 4px 8px #c1c1c1;
  
}

.calendar-wrap {
  width: 100%;
  margin-left: 70rpx;
  flex-grow: 0;
}

.calendar .weui-btn {
  margin: 0;
  padding: 0;
  width: 45%;
}

.calendar .weui-btn button {
  font-size: 16px;
}

.pink-color {
  color:black;
}

.grid,
.week {
  width: 80rpx;
  height: 80rpx;
}

.day {
  width: 60rpx;
  height: 60rpx;
  font-size: 26rpx;
  font-weight: 200;
}

.calendar .disable-day-color {
  color: #d0d0d0;
}

.calendar .disable-day-circle {
  background-color: #f0f0f0;
}

.calendar .normal-day-color {
  color: #000;
}

.calendar .day-choosed-color {
  color: #fff;
}

.calendar .border-radius {
  border-radius: 3px;
  position: relative;
  left: 0;
  top: 0;
}

.calendar .pink-bg {
  background-color: blue;
  transition: all 0.3s;
  animation-name: choosed;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: 1;
}

@keyframes choosed {
  from {
    transform: scale(1);
  }

  50% {
    transform: scale(0.9);
  }

  to {
    transform: scale(1);
  }
}


.pup-rating {
  position: absolute;
  bottom: 10px;
  left: 10px;
}

.details {
  position: absolute;
  bottom: 10px;
  right: 10px;
}