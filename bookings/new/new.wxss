.container {
  width: 95vw;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  padding: 0;
  padding-bottom: 50rpx;
}

.cost-box {
  width: 100%;
  height: 75rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.cost-box .cost {
  padding: 0 25rpx;
}

.card {
  position:relative;
  display:flex;
  justify-content:space-between;
  align-items:center;
  flex-direction:column;
  height:200px;
  width:95vw;
  background-size:cover;
  background-position:center;
  margin:10px;
  box-shadow:0px 4px 8px #c1c1c1;
  padding:0;
}

.card-footer {
  position: relative
}

.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
  color: white;
}

.card-description {
  position: absolute;
  top: 25px;
  left: 10px;
  font-size:12px;
  padding:5px 0;
  color:rgb(200,200,200);

}

.card-image {
  width:100%;
  height:150px;
  background-size: cover !important;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  margin:0;
}

.card-footer {
  display:flex;
  align-items:center;
  justify-content:space-between;
  height:50px;
  width:100%;
}

.calendar-box {
  width: 100%;
  height: 250rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
  box-shadow: 0px 4px 8px #c1c1c1;
}

.calendar {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.calendar .weui-btn {
  margin: 0;
  padding: 0;
  width: 45%;
}

.calendar .weui-btn button {
  font-size: 16px;
}

.pup-rating {
  position: absolute;
  bottom: 10px;
  left: 10px;
}

.details {
  position: absolute;
  bottom: 10px;
  right: 10px;
}